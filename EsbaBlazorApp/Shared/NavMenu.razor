<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ESBA</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        @foreach (MenuOption item in MenuOptions)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@item.Href" Match="NavLinkMatch.All">
                    <i class="@item.Icon m-2"></i> @item.Name
                </NavLink>
            </li>
        }
        @* <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
            </li>
            <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
            <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
            </li>
            <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
            <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
            </li> *@
    </ul>
</div>

@code {

    private class MenuOption
    {
        public string Name { get; set; } = default!;
        public bool Expanded { get; set; } = false;
        public string Href { get; set; } = default!;
        public string Icon { get; set; } = default!;
        public List<SubMenuOption> SubMenus { get; set; } = new List<SubMenuOption>();
    }
    private class SubMenuOption
    {
        public string Name { get; set; } = default!;
        public string Href { get; set; } = default!;
        public string Icon { get; set; } = default!;
    }

    private List<MenuOption> MenuOptions = new List<MenuOption>();
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnParametersSetAsync()
    {
        MenuOptions.Add(new MenuOption()
        {
            Name = "Home",
            Expanded = false,
            Href = "",
            Icon = "fas fa-home"
        });
        MenuOptions.Add(new MenuOption()
        {
            Name = "Counter",
            Expanded = false,
            Href = "counter",
            Icon = "fas fa-globe"
        });

        MenuOptions.Add(new MenuOption()
        {
            Name = "Submenu",
            Expanded = false,
            Href = "",
            Icon = "fas fa-globe",
            SubMenus.Add(new SubMenuOption()
            {
                Name = "pepe",
                Icon = "fas fa-globe"
            })
        });


    }

}
