@page "/"

@inherits _BasePage

<div class="row">
    <div class="col">
         <RadzenFieldset>
            <HeaderTemplate>
                <span>
                    <RadzenIcon Icon="account_box" /><b style="font-size:20px">Alumno</b>
                </span>
            </HeaderTemplate>
            <ChildContent>
                @if(_alumno != null)
                {
                    <span>@_alumno.Apellido, @_alumno.Nombre</span>
                }
            </ChildContent>
        </RadzenFieldset>    
    </div>
    <div class="col">
        <RadzenFieldset>
            <HeaderTemplate>
                <span>
                    <RadzenIcon Icon="account_box" /><b style="font-size:20px">Carrera</b>
                </span>
            </HeaderTemplate>
            <ChildContent>
                @if(_carrera != null)
                {
                    <span>@_carrera.Nombre</span>
                }
            </ChildContent>
        </RadzenFieldset>    
    </div>        
</div>
<div class="row">
    <div class="col">
        <RadzenFieldset>
            <HeaderTemplate>
                <span>
                    <RadzenIcon Icon="account_box" /><b style="font-size:20px">Documentacion presentada</b>
                </span>
            </HeaderTemplate>
            <ChildContent>
                <div class="row">
                    <div class="col">    
                        <span>Fotocopia DNI</span>
                    </div>
                    <div class="col">    
                        <RadzenBadge BadgeStyle="BadgeStyle.Success" IsPill="true" Text="Presentado" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">    
                        <span>Foto</span>
                    </div>
                    <div class="col">    
                        <RadzenBadge BadgeStyle="BadgeStyle.Success" IsPill="true" Text="Presentado" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">    
                        <span>Analitico</span>
                    </div>
                    <div class="col">    
                        <RadzenBadge BadgeStyle="BadgeStyle.Success" IsPill="true" Text="Presentado" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">    
                        <span>Constancia Titulo en tramite</span>
                    </div>
                    <div class="col">    
                        <RadzenBadge BadgeStyle="BadgeStyle.Success" IsPill="true" Text="Presentado" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">    
                        <span>Apto fisico</span>
                    </div>
                    <div class="col">    
                        <RadzenBadge BadgeStyle="BadgeStyle.Danger" IsPill="true" Text="Falta" />
                    </div>
                </div>
            </ChildContent>
            @*<RadzenBadge BadgeStyle="BadgeStyle.Danger" Text="Danger" /> *@
            
        </RadzenFieldset>    
    </div>  
    <div class="col">

    </div>  
</div>