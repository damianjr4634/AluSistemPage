@page "/alumno/materias/info/{MateriaId}"

@inherits _BasePage


<div class="container-fluid">   
    <FormModal Size="modal-lg" OnClose=@OnClose Visible=@Visible Header="Informacion Academica">
        <header>
            <div class="container">
                @if (!string.IsNullOrEmpty(MateriaNombre)) 
                {
                    <div class="text-center">    
                        <span style="font-size:16px">  
                            <b>@MateriaNombre</b>
                        </span>
                    </div>
                }
                <hr/> 
            </div>                  
        </header>
        @if (Carrera.IdCarrera != "650" && Carrera.IdCarrera != "333") 
        {
            <div class="row">
                <div class="col-xl-6 left form-line">
                    <div class="row ml-2">
                        <div class="col-md-6 p-0"><b style="font-size:12px">Nota primer parcial</b></div>
                        <div class="col-md-4 p-0">
                            <RadzenNumeric ShowUpDown="false" TValue="double?" Format="00.00" @bind-Value=@_notas.PrimerNota Disabled="true" Class="mb-3" Style="width:80px"/>
                        </div>
                    </div>
                    <div class="row ml-2">
                        <div class="col-md-6 p-0"><b style="font-size:12px">Nota segundo parcial</b></div>
                        <div class="col-md-4 p-0">
                            <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" Disabled="true" Class="mb-3" Style="width:80px"/>
                        </div>
                    </div>
                    <div class="row ml-2">
                        <div class="col-md-6 p-0"><b style="font-size:12px">Recuperatorio integrador</b></div>
                        <div class="col-md-4 p-0">
                            <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" Disabled="true" Class="mb-3" Style="width:80px"/>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="row">
                        <div class="col-md-6 p-0"><b style="font-size:12px">Inasistencias sin justificar</b></div>
                        <div class="col-md-4 p-0">
                            <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" Disabled="true" Class="mb-3" Style="width:80px"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 p-0"><b style="font-size:12px">Inasistencias justificar</b></div>
                        <div class="col-md-4 p-0">
                            <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" Disabled="true" Class="mb-3" Style="width:80px"/>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {            
            <div class="row">
                <div class="col-6 left form-line">
                    <RadzenFieldset>
                        <HeaderTemplate>
                            <span Style="color: black">
                                <b style="font-size:12px">Evaluaciones</b>
                            </span>
                        </HeaderTemplate>
                        <ChildContent>
                            <div class="row">
                                <div class="col-5">
                                    <label class=""><b style="font-size:12px">Primer Bimestre</b></label>
                                </div>
                                <div class="col">    
                                    <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" @bind-Value=@_notas.PrimerNota  ReadOnly="true" Class="mb-3" Style="width:80px"/>
                                </div>         
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <label class=""><b style="font-size:12px">Segundo Bimestre</b></label>
                                </div>
                                <div class="col">     
                                    <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" @bind-Value=@_notas.SegundaNota  ReadOnly="true" Class="mb-3" Style="width:80px"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <label class=""><b style="font-size:12px">Tercer Bimestre</b></label>
                                </div>
                                <div class="col">     
                                    <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" @bind-Value=@_notas.SegundaNota ReadOnly="true" Class="mb-3" Style="width:80px"/>
                                </div>
                            </div>
                        </ChildContent>
                    </RadzenFieldset>
                </div> 
                <div class="col">
                    <RadzenFieldset>
                        <HeaderTemplate>
                            <span Style="color: black">
                                <b style="font-size:12px">Recuperatorios</b>
                            </span>
                        </HeaderTemplate>
                        <ChildContent>
                            <div class="d-flex flex-row">
                                <div class="d-flex flex-column-5 mr-5">
                                    <label class="mr-3"><b style="font-size:12px">Diciembre</b></label>
                                
                                    <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" @bind-Value=@_notas.DiciembreNota ReadOnly="true" Class="mb-3" Style="width:80px"/>
                                </div>
                                <div class="d-flex flex-column-5">
                                    <label class="mr-3"><b style="font-size:12px">Marzo</b></label>                                   
                                    <RadzenNumeric ShowUpDown="false" TValue="double?" Format="0.00" @bind-Value=@_notas.MarzoNota ReadOnly="true" Class="mb-3" Style="width:80px" Align="TextAlign.Center"/>
                                </div>        
                            </div>
                        </ChildContent>
                    </RadzenFieldset>
                </div>     
            </div>   
        }
    </FormModal>
    
</div>

